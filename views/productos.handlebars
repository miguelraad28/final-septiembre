<h1>Bienvenido {{user}} !</h1>
<p>Rol : {{rol}}</p>

<h1>Productos</h1>

{{#if hayProductos}}
    {{#if esUser}}
    <div class="container-cards-productos">
        {{#each productos.docs}}
            <div class="card border-dark mb-3" style="max-width: 20rem;">
                <div class="card-header">{{this._id}}</div>
                <div class="card-body">
                    <h4 class="card-title">{{this.title}}</h4>
                    <h4 class="card-title">{{this.price}}</h4>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text">SKU : {{this.code}}</p>
                    <p class="card-text">stock : {{this.stock}}</p>
                    <button class="btnAgregarAlCarrito" data-product-id="{{this._id}}">Agregar al carrito</button>
                    <p id="p{{this._id}}"></p>
                </div>
            </div>
        {{/each}}
    </div>
    {{else if esAdmin }}
    <div class="container-cards-productos">
        {{#each productos.docs}}
            <div class="card border-dark mb-3" style="max-width: 20rem;">
                <div class="card-header">{{this._id}}</div>
                <div class="card-body">
                    <h4 class="card-title">{{this.title}}</h4>
                    <h4 class="card-title">{{this.price}}</h4>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text">SKU : {{this.code}}</p>
                    <p class="card-text">stock : {{this.stock}}</p>
                    <button class="btnEditar" data-product-id="{{this._id}}">Editar</button>
                    <button class="btnDelete" data-product-id="{{this._id}}">Eliminar</button>
                </div>
            </div>
        {{/each}}
    </div>
    {{/if}}
    <div class="divPaginate">
        {{#if productos.hasPrevPage}}
        <button type="button" class="btn btn-outline-primary">
            <a href="/products?page={{productos.prevPage}}&{{query}}">Anterior</a>
        </button>
        {{/if}}
        {{#if productos.hasNextPage}}
        <button type="button" class="btn btn-outline-primary">
            <a href="/products?page={{productos.nextPage}}&{{query}}">Siguiente</a>
        </button>
        {{/if}}
    </div>
{{else}}
    <h2>no hay productos</h2>
{{/if}}






