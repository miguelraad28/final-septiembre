<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">Registro</h1>
            <form id="registerForm" class="mt-4">
                <div class="mb-3">
                    <label for="firstNameInput" class="form-label">Nombre</label>
                    <input type="text" id="firstNameInput" name="name" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="lastNameInput" class="form-label">Apellido</label>
                    <input type="text" id="lastNameInput" name="lastname" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="emailInput" class="form-label">Email</label>
                    <input type="email" id="emailInput" name="email" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="ageInput" class="form-label">Edad</label>
                    <input type="number" id="ageInput" name="age" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="passwordInput" class="form-label">Contraseña</label>
                    <input type="password" id="passwordInput" name="password" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Registrarse</button>
            </form>
            <p class="mt-3">¿Ya tienes una cuenta? <a href="/login">Ingresa aquí</a></p>
        </div>
    </div>
</div>
<script src="/js/register.js"></script>