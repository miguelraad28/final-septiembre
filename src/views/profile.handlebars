  <h1>Profile</h1>
  <p>Name: {{user.first_name}} {{user.last_name}}</p>
  <p>Email: {{user.email}}</p>
  <p>Age: {{user.age}}</p>
  <p>Role: {{user.role}}</p>
  
  <!-- Document Upload Form -->
  <h2>Upload Document</h2>
  <form action="/api/users/{{user._id}}/documents" method="post" enctype="multipart/form-data">
    <label for="docType">Document Type:</label>
    <select name="type" id="docType">
      <option value="profile">Profile Image</option>
      <option value="product">Product Image</option>
      <option value="document">Other Document</option>
    </select>
    <label for="fileInput">Choose file:</label>
    <input type="file" name="documents" id="fileInput" multiple>
    <input type="submit" value="Upload">
  </form>

  <a class="button-link" href="/logout">Logout</a>

